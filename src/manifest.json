{
  "manifest_version": 2,

  "name": "Destract",
  "description": "Removes distracting elements from web pages",
  "version": "0.0",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["rule_registry.js", "style_blocks.js"],
      "run_at": "document_start"
    }
  ]
}
