{
  "manifest_version": 2,

  "name": "Destract",
  "description": "Removes distracting elements from web pages",
  "version": "0.1",

  "icons": {
     "128": "images/icon128.png",
      "48": "images/icon96.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
        "38": "images/icon96.png",
        "19": "images/icon96.png"
    }
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["rule_registry.js", "style_blocks.js"],
      "run_at": "document_start"
    }
  ]
}
